{
  "manifest_version": 3,
  "name": "Browse Youtube Consciously",
  "version": "1.0.0",
  "description": "Customize your Youtube experience by consciously deciding the topics you don't want to see.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["dist/content.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/embeddingUtils.js",
        "src/embeddingConfig.js",
        "src/logger.js",
        "src/notInterestedActions.js"
      ],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
