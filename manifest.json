{
  "manifest_version": 3,
  "name": "Youtube Watch Guard",
  "version": "0.0.2",
  "description": "Guard your YouTube browsing behavior from subconscious watching patterns by consciously deciding what you want to see.",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["dist/content.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/contentScript/classificationUtils.js",
        "src/contentScript/textClassifier.js",
        "src/contentScript/textClassifierServer.js",
        "src/contentScript/textClassifierBuiltinAI.js",
        "src/logger.js",
        "src/notInterestedActions.js"
      ],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
